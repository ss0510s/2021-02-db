<!--- 예약 시스템 레이아웃--->
<style type = "text/css">
    #side-navbar {
        background-color: black;
        height: 100%;
        width: 250px;
        position: fixed;
    }
    h2{
        text-align: center;
        color: white;
        padding-top:20px;
    }
    h3{
        text-align: center;
        color: white;
        padding-top:10px;
        padding-bottom: 50px;
    }
    .box {
        border-width:5px;
        border-style:solid;
        border-color:black;
    }
    ul{
        padding-left: 30px;
        margin-bottom: 30px;
        list-style: none;
    }
    li:not(:last-child){
        margin-bottom: 30px;
        color: white;
    }
    li a{
        color: white;
        text-decoration: none;
    }
    #main {
        margin-left: 300px;
        text-align: center;

    }
    table{
        margin:auto;
        text-align: center;
        border-collapse:collapse}
    th,td{border:1px solid black;width:150px;height:30px}

    #User_id, #Flight_number, #Date, #Seat_number, #Customer_name, #Customer_phone {
        margin-top: 15px;
        font-size: 20px;
    }
    .btn {
        margin-top: 20px;
        font-size: 20px;
    }

</style>

<html>
    <div id = "side-navbar">
        <h2>항공기 운영 시스템</h2>
        <h3>user</h3>
        <ul>
            <li><a href='http://localhost:3021/reserv'>항공편 예약</a></li>
            <li><a href='http://localhost:3021/reserv/select'>항공편 조회</a></li>
            <li><a href='http://localhost:3021/reserv/delete'>항공편 취소</a></li>
        </ul>
    </div>

    <div id = "main">
        <h1 class = 'box'>항공편 리스트</h1>
        <table>
            <tr>
                <td>Flight_number</td>
                <td>Leg_number</td>
                <td>Date</td>
                <td>Number_of_available_seats</td>
                <td>Airplane_id</td>
                <td>Departure_airport_code</td>
                <td>Departure_time</td>
                <td>Arrival_airport_code</td>
                <td>Arrival_time</td>
            </tr>
            {{#each leg_instance}}
                <tr>
                    <td>{{Flight_number}}</td>
                    <td>{{Leg_number}}</td>
                    <td>{{DATE}}</td>
                    <td>{{Number_of_available_seats}}</td>
                    <td>{{Airplane_id}}</td>
                    <td>{{Departure_airport_code}}</td>
                    <td>{{Departure_time}}</td>
                    <td>{{Arrival_airport_code}}</td>
                    <td>{{Arrival_time}}</td>
                </tr>
            {{/each}}
        </table>
        <h1 class = "box">항공기 요금 정보</h1>
        <table>
            <tr>
                <td>Flight_number</td>
                <td>Fare_code</td>
                <td>Amount</td>
            </tr>
            {{#each fare}}
            <tr>
                <td>{{Flight_number}}</td>
                <td>{{Fare_code}}</td>
                <td>{{Amount}}</td>  
            </tr>
            {{/each}}
            
        </table>
        <div>
            <hr style = "display;block;border:black 0 none; border-top:black 3px dotted;height:1px">
        </div>
        <h1 class = 'box'>항공기 예매</h1>
        <form name = "seat_reservation" method="post" action='/reserv'>
            <div>
                <label far = "User_id">User_id : </label>
                <!-- input으로 데이터를 입력 받음. fname은 non null 이므로 required -->
                <input id="User_id" name ="User_id" type = "text" required placeholder = "User_id">
            </div>
            <div>
                <label far = "Flight_number">예약할 Flight_number : </label>
                <!-- input으로 데이터를 입력 받음. fname은 non null 이므로 required -->
                <input id="Flight_number" name ="Flight_number" type = "text" required placeholder = "Flight_number">
            </div>
            <div>
                <label far = "Date">Date : </label>
                <!-- input으로 데이터를 입력 받음. fname은 non null 이므로 required -->
                <input id="Date" name ="Date" type = "date" required placeholder = "Date">
            </div>
            <div>
                <label far = "Seat_number">좌석 번호 : </label>
                <input id="Seat_number" name ="Seat_number" type = "text" placeholder = "Seat_number">
            </div>
            <div>
                <label far = "Customer_name">이름 : </label>
                <input id="Customer_name" name ="Customer_name" type = "Customer_name" required placeholder = "Customer_name">
            </div>
                <div>
                <label far = "Customer_phone">휴대폰 번호 : </label>
                <input id="Customer_phone" name ="Customer_phone" type = "Customer_phone" required placeholder = "Customer_phone">
            </div>
            <button class='btn' type="submit">예매</button>
        </form>

    </div>
</html>
