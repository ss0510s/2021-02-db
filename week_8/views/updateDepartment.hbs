<!--데이터 수정을 위한 테이블 구조 구현 -->
<h1>{{title}}</h1>

<table>
    <tr>
        <td>Dname</td>
        <td>Dnumber</td>
        <td>Mgr_ssn</td>
        <td>Mgr_start_date</td>
    </tr>
    {{#each dept_res}}
        <form method = "post" action = '/update/department'>
            <tr>
                <!-- input tag를 사용하여 입력가능한 형태로 변경 -->
                <td><input type = "text" name = "dname" placeholder="{{Dname}}"></td>
                <!-- update시 where 조건으로 사용할 input요소 추가, 단 값이 변하지 않게 함 -->
                <td><input type = "text" name = "dnumber" value="{{Dnumber}}" readonly
                style="border:none;border-right:0px; border-top:0px; boder-left:0px; boder-bottom:0px;"
                ></td>
                <td>{{Mgr_ssn}}</td>
                <td>{{Mgr_start_date}}</td>
                <!--formation 속성을 활용하여 입력한 값을 넘겨줌 -->
                <td><input type = "submit" value ="수정" formaction = "/update/department"></td>
            </tr>
        </form>
    {{/each}}
</table>